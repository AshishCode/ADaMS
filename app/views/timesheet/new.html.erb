<h2>New Entry</h2>
<%= form_for :timesheet,html: {role: "form", class: "form-horizontal"} do |t| %>  

  <div class="form-group"> 
  	<label for="client" class="col-sm-2 control-label">Client</label>
    <div class="col-sm-10">
      <%= t.text_field :client, class: "form-control", :required => true %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="project" class="col-sm-2 control-label">Project</label>
    <div class="col-sm-10">
      <%= t.text_field :project, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="task" class="col-sm-2 control-label">Task</label>
    <div class="col-sm-10">
      <%= t.text_field :task, class: "form-control" %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="timesheetdate" class="col-sm-2 control-label">TimesheetDate</label>
    <div class="col-sm-10">
      <%= t.date_select :timesheetdate, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="hours" class="col-sm-2 control-label">Hours</label>	
    <div class="col-sm-10">
      <%= t.number_field :hours, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="is_billed" class="col-sm-2 control-label">Is Billed</label>
    <div class="col-sm-10">
      <%= t.number_field :is_billed, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="at_home" class="col-sm-2 control-label">At Home</label>
    <div class="col-sm-10">
      <%= t.number_field :at_home, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="at_clientsite" class="col-sm-2 control-label">At ClientSide</label>
    <div class="col-sm-10">
      <%= t.number_field :at_clientsite, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="Comments" class="col-sm-2 control-label">Comments</label>
    <div class="col-sm-10">
      <%= t.text_field :comments, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group"> 
  	<label for="employee_id" class="col-sm-2 control-label">Employee ID </label>
    <div class="col-sm-10">
      <%= t.number_field :employee_id, class: "form-control"  %>
    </div>
  </div> 

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Save" />
      <input type="button" value="Cancel" />
    </div>
  </div>
<% end %>
