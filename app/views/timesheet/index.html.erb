<html>
	<head>
		<title>
			Timesheet	
		</title>
	</head>
	<body>	
		<h1>This will be the page having the timesheet entries</h1>
		<table class="table">
			<thead>                         
  			<tr class="success">                          
			    <th>ID</th>
			    <th>Client</th>
			    <th>Project</th>
			    <th>Task</th>
			    <th>Date</th>
			    <th>Hours</th>
			    <th>Is_Billed</th>
			    <th>At_Home</th>
			    <th>At_ClientSite</th>
			    <th>Comments</th>
			    <th>Employee_ID</th>
			    <th>Action</th>
			  </tr>
			</thead>
			<tbody>
		<% @timesheet.each do |entry| %>
		  <tr>
		    <td><%= entry.id %></td> 
		    <td><%= best_in_place entry, :client, type: :input %></td> 
		    <td><%= best_in_place entry, :project %></td>  
		    <td><%= best_in_place entry, :task %></td> 

		    <td><%= entry.timesheetdate %></td>  

		    <td><%= best_in_place entry, :hours %></td>  
		    <td><%= best_in_place entry, :is_billed %></td>  
		    <td><%= best_in_place entry, :at_home %></td>  
		    <td><%= best_in_place entry, :at_clientsite %></td>  
		    <td><%= best_in_place entry, :comments %></td>  
		    <td><%= entry.employee_id %></td>  
		    <td><%= link_to "/timesheet/delete/"+entry.id.to_s, method: :delete do %>
  			<i class="glyphicon glyphicon-remove"></i>
		<% end %></td>
		  </tr>
		<% end %>      
		</tbody>
		</table> 
		<%= link_to "/timesheet/new", class: 'btn btn-success btn-bg' do %>
  			<i class="glyphicon glyphicon-plus"></i> Add Entry
		<% end %>
		
	</body>

</html>
